//  == media mixin
mw($media = 1700px, $above = false)
	if($above)
		@media (min-width $media)
			{block}
	else
		@media (max-width $media)
			{block}
			
mh($media = 600px, $above = false)
	if($above)
		@media (min-height $media)
			{block}
	else
		@media (max-height $media)
			{block}

// == other
btn()
	height 49px 
	border-radius 55px
	background linear-gradient(180deg, #FF6D56 0%, #FF8835 100%)
	text-transform uppercase
	font 700 14px/1 'Quanelas', Arial, Helvetica, sans-serif
	color #fff
	outline none
	transition all .5s ease
	cursor pointer
	border none
	&:hover
		background rgba(255,137,53,1)
		background -moz-linear-gradient(top, rgba(255,137,53,1) 0%, rgba(214,78,60,1) 100%)
		background -webkit-gradient(left top, left bottom, color-stop(0%, rgba(255,137,53,1)), color-stop(100%, rgba(214,78,60,1)))
		background -webkit-linear-gradient(top, rgba(255,137,53,1) 0%, rgba(214,78,60,1) 100%)
		background -o-linear-gradient(top, rgba(255,137,53,1) 0%, rgba(214,78,60,1) 100%)
		background -ms-linear-gradient(top, rgba(255,137,53,1) 0%, rgba(214,78,60,1) 100%)
		background linear-gradient(to bottom, rgba(255,137,53,1) 0%, rgba(214,78,60,1) 100%)


btn-tab()
	box-shadow 0px 4px 15px rgba(51, 51, 51, 0.1)
	border-radius 100px
	max-width 200px
	width 100%
	height 50px
	color #B0B0B0
	transition all .3s ease
	background #fff
	border none
	cursor pointer
	&:hover
		background linear-gradient(180deg, #FF6D56 0%, #FF8835 100%)
		box-shadow 0px 6px 20px rgba(51, 51, 51, 0.15)
		color #fff

		
box-style()
	border 1px solid #FF8835
	border-radius 10px
	transition all .3s ease

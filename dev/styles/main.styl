@import 'utils/vars.styl'
@import 'utils/mixins.styl'

h1,h2,h3,h4,h5,h6
	margin-top 0
	
h1
	font 900 28px/32px 'Quanelas', Arial, Helvetica, sans-serif
	color $colorMain
	+mw(480px)
		font-size 26px
		line-height 30px

ul,li
	list-style-type none
	margin 0
	padding 0
	color $colorMain

p
	margin 0

a
	color inherit
	text-decoration none
	

.logo img
	display block	

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle
	max-width 100%

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

[type='submit'] 
	cursor pointer

*, *:before, *:after
	box-sizing border-box
	
@media (min-width:1101px)
	a,[type=submit] 
	// user-select: none
		-webkit-tap-highlight-color: rgba(0, 0, 0, 0)
		


/*site styles*/
html
	font-size $baseFontSize;
	min-height 100%;
	line-height 1.2;

body
	font-family 'FranklinGothic', Sans-Serif
	font-weight normal
	background #fff
	color #024CBD
	overflow-x hidden
	position relative
	
p 
	font 400 18px/38px 'FranklinGothic', Arial, Helvetica, sans-serif
	

.wrapper
	position relative
	display flex
	flex-direction column
	justify-content space-between
	min-height calc(100vh)

.container
	width 85.5%
	margin 0 auto
	+mw(1100px)
		width 100%
		max-width 100%
		margin 0 auto
		padding 0 15px
		position relative
		z-index 8


.isDesctop
	+mw(1100px)
		display none
.isMobile
	display none
	+mw(1100px)
		display block
		
.btn 
	btn()


.title
	color $black
	font 700 26px/1 'FranklinGothic', Arial, Helvetica, sans-serif
	text-transform uppercase
	
.inner
	display flex
	justify-content space-between
	.col
		width 50%


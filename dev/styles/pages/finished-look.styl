.finished-look-page
	position relative
	z-index 11
	padding-top 130px
	// height 100vh
	// overflow hidden
	.btns__wrap
		justify-content space-between
	.btns__item
		margin-bottom 0
	&:after 
			content ''
			display block
			position absolute
			width 300px
			height 350px
			background url('../img/lorem/grid.png') no-repeat center center
			background-size cover
			right 0
			top -30px
			z-index -1
			+mw(1100px)
				top -190px
			+mw(768px)
				width 250px
				height 280px
				top -120px
			+mw(480px)
				width 170px
				height 190px
				top -90px
	&:before
		content ''
		display block
		position absolute
		width 300px
		height 350px
		background url('../img/lorem/grid.png') no-repeat center center
		background-size cover
		left 0
		bottom -30px
		z-index -1
		+mw(1100px)
			top -190px
		+mw(768px)
			width 250px
			height 280px
			top -120px
		+mw(480px)
			width 170px
			height 190px
			top -90px
	&__inner
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items flex-start
		// height 100%
		// overflow auto
		position relative
		&::-webkit-scrollbar
			opacity 0
		&::-webkit-scrollbar-thumb
			opacity 0
	&__form
		padding-bottom 150px
		&::-webkit-scrollbar
			opacity 0
		&::-webkit-scrollbar-thumb
			opacity 0
	&__container
		position relative
		height 100vh
		overflow hidden
	&__col-l
		width 45%
		height 100%
		// position relative
		position absolute
		left 0
		top 0
		z-index 1
	&__col-r
		width 100%
		height 100%
		overflow auto
		position relative
		z-index 9
		padding-left 50%
		&::-webkit-scrollbar
			opacity 0
		&::-webkit-scrollbar-thumb
			opacity 0
	&__content
		position relative
		overflow hidden
	.products
		height 100%
		left 0
		top 0
		opacity 1
		visibility visible
		z-index 1
		position relative
		.products__item
			&.active
				.products__item-body
					border-color transparent
	.bottom-btn__link
		width 300px
		display block
		margin auto
		color rgba(255, 136, 53, 1)
		border 1px solid rgba(255, 136, 53, 1)
		border-radius 50px
		padding 10px 0
		text-align center
		font-size 14px
		text-transform uppercase
	&__form
		padding-bottom 50px

	
.talking-block
	width 200px
	height 250px
	position absolute
	right 0
	top 0
	background url('../img/lorem/talking-border.png') no-repeat top center
	background-size contain
	padding 18px
	z-index 10
	&__title
		font-size 16px
		color #FF8539
		text-align center
		font-weight 500
		margin-bottom 10px
	&__text
		font-size 14px
		line-height 1.2
		color #333333
		font-weight normal
		margin-bottom 5px
	&__link
		btn()
		width 100px
		height 35px
		font-size 14px
		display inline-block
		text-align center
		padding 10px 0
		margin 10px 0
	&__name
		color #797979
			
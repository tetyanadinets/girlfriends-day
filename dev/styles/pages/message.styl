.message-page
	text-align center
	&__title
		font 700 48px/50px 'FranklinGothic', Arial, Helvetica, sans-serif
		text-transform uppercase
		text-align center
		color #024CBD
		margin-top 200px
		+mw(1100px)
			font-size 36px
		+mw(480px)
			font-size 30px
			max-width 250px
			margin 115px auto 0
	&__img
		margin 60px auto
		text-align center
		+mw(480px)
			max-width 250px
	&__link
		btn()
		margin-top 50px
		display inline-block
		padding 18px 20px 17px
		margin-bottom 50px
		+mw(480px)
			margin-top 30px
			height auto
		

.star1, .star5
	animation star 2s infinite ease-in-out
.star2,.star4
	animation star 2s infinite ease-in-out 1s
.star3, .star6
	animation star 2s infinite ease-in-out .5s

@keyframes star
	0%
		opacity 0
	50%
		opacity 1
	100%
		opacity 0

		
.empty-page
	&__title
		padding 300px	0 250px
		max-width 950px	
		margin 0 auto
		font-size 34px
		line-height 45px
		text-align center
		font-weight 700
		+mw(1100px)
			padding 300px	0 0
			max-width 100%
			font-size 30px	
			line-height 40px	
		+mw(768px)
			font-size 26px	
			line-height 30px
			padding 250px 0 0
		+mw(480px)
			padding 150px 0 0
			font-size 24px	
			line-height 28px			
		
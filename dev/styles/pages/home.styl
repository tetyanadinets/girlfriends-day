.go-top
	width 60px
	height 60px
	border-radius 50%
	border 1px solid #f8f5f6
	// background linear-gradient(180deg, #FF6D56 0%, #FF8835 100%)
	background-color #FDF10F
	position fixed
	z-index 99
	right 30px
	bottom 30px
	opacity 0
	-webkit-transition all 0.3s ease
	-o-transition all 0.3s ease
	transition all 0.3s ease
	cursor pointer
	&_active
		opacity 0.8
	&:hover
		transform scale(1.2)
	&:before
		content ''
		display block
		width 25px
		height 25px
		border-top 3px solid #024CBD
		border-right 3px solid #024CBD
		position absolute
		left 17px
		top 22px
		-webkit-transform rotate(-45deg)
		-ms-transform rotate(-45deg)
		transform rotate(-45deg)
	+mw(768px)
		width 40px
		height 40px
		right 15px
		bottom 15px
		&:before
			width 15px
			height 15px
			left 12px
			top 14px
	


.down1
	animation scroll1 1s ease infinite
.down2
	animation scroll2 1s ease infinite


@keyframes scroll1
	0%
		transform translateY(-5px)
		opacity 1
	40%
		transform translateY(-3px)
		opacity 1
	60%
		transform translateY(0px)
		opacity 1
	80%
		transform translateY(3px)
	100%
		transform translateY(12px)
		opacity 0
				
@keyframes scroll2
	0%
		transform translateY(-5px)
		opacity 1
	40%
		transform translateY(-1px)
		opacity 1
	60%
		transform translateY(1px)
		opacity 1
	80%
		transform translateY(3px)
	100%
		transform translateY(13px)
		opacity 0

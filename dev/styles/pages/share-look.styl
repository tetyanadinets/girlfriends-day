.share-form
	max-width 930px
	margin 0 auto
	text-align center
	input
		width 290px
		padding 5px 20px
		font-size 14px
		font-weight normal
		border 1px solid transparent
		border-radius 50px
	&__title
		font-size 24px
		text-transform uppercase
		font-weight 700
		margin-bottom 80px
		color #024CBD
		text-align center
	&__row
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items center
	.fieldset
		&.has-error
			input
				border-color red
				color red
			.help-block
				opacity 1
	.help-block
		padding 10px 10px 0
		color red
		opacity 0
		transition opacity .3s ease
	&__show-btn
		text-align center
		color #024CBD
		margin-bottom 30px
		padding-bottom 5px
		cursor pointer
		border-bottom 1px dashed transparent
		transition border .3s ease
		display inline-block
		&:hover
			border-color #fff
	&__hidden
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items center
		flex-wrap wrap
		margin-bottom 60px
	&__section
		&_checkbox
			cursor pointer
			margin-top 60px
			input
				display inline-block
				vertical-align middle
				opacity 0
				position absolute
				z-index -1
				left 0
				&:checked + label
					svg
						transform translateX(-89%)
					.grey
						fill #67CA3E
			label
					font-size 14px
					display block
					width 96px
					height 50px
					border-radius 50px
					position relative
					cursor pointer
					transition color .3s ease
					text-align center
					background-color #fff
					margin auto
					svg
						transition all .5s ease
						position absolute
						right 0
						bottom 0
					.grey
						fill #D2D2D2
	&__btn
		color #024CBD
		font-weight 700
		text-align center
		margin 85px auto
		width 370px
		padding 15px
		background-color #fff
		border-radius 50px
		border 2px solid #fff
		cursor pointer
		text-transform uppercase
		transition all .3s ease
		&:hover
			background-color transparent


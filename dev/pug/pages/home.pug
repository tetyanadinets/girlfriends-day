extends ../main

block variables
	- var title = 'Главная страница';
	- var pageClass = 'home-page';

block content
	+b.SECTION.hero(style='background:url(img/lorem/poster.png) no-repeat right bottom; background-size: contain;')
		.container
			+e.H1.h1 Зміни образ разом з Еva, дивуй, захоплюй, інтригуй. Поділись з 5 подругами новим луком та отримай 500 бонусів у подарунок.
	
	+b.SECTION.log-in
		.container
			+e.inner.inner
				+e.col.col
					+e.imgs
						+e.IMG.img(src="img/lore qm/log-in_1.png" alt="")
						+e.IMG.img(src="img/lorem/log-in_2.png" alt="")
						+e.IMG.img(src="img/lorem/log-in_3.png" alt="")
				+e.col.col
					+e.H2.title Увійдіть, щоб взяти участь у конкурсі
					+b.FORM.form
						+e.fieldset.form-item.valid.has-error
							label Ім'я
							+e.INPUT(type="text" name="name" placeholder="Єва Подругіна").name
							.help-block Введіть ім'я
						+e.fieldset.form-item.valid
							label Номер телефону
							+e.INPUT(type="tel" name="phone" placeholder="+38 (0**) *** - ** - **").phone
							.help-block Введіть телефон
						+e.fieldset.valid
							label Електронна пошта
							+e.fieldgroup
								+e.INPUT(type="email" name="email" placeholder="*******@****.ua" required).mail
								+e.A(href="#popupCode").btn.popupBtn Увійти
	+b.SECTION.rules
